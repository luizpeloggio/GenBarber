<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.meuapp.finalizarPedido">

    <children>

        <!-- HEADER -->
        <VBox styleClass="container-header" alignment="CENTER">
            <children>
                <Label text="Finalizar Pedido"
                       styleClass="label-header"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;" />
            </children>
        </VBox>


        <!-- ÁREA DO CORPO -->
        <VBox styleClass="container-body" spacing="20" alignment="TOP_CENTER" maxWidth="340">

            <!-- MÉTODO DE PAGAMENTO -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f2f2f2; -fx-background-radius: 10;">
                <Label text="Método de Pagamento" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="lblPagamento" text="Cartão de Crédito" style="-fx-font-size: 14px;" />
            </VBox>

            <!-- ENDEREÇO -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f2f2f2; -fx-background-radius: 10;">
                <Label text="Endereço de Entrega" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="lblEndereco" text="Rua Exemplo, 123 - Centro" style="-fx-font-size: 14px;" />
            </VBox>

            <!-- LISTA DOS ITENS DO PEDIDO -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #ffffff; -fx-background-radius: 10; -fx-border-color: #ccc; -fx-border-radius: 10;">
                <Label text="Itens do Pedido" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <VBox fx:id="listaCompras" spacing="10" alignment="TOP_CENTER" />
            </VBox>

            <!-- TOTAL -->
            <VBox spacing="10" style="-fx-padding: 10; -fx-background-color: #f2f2f2; -fx-background-radius: 10;">
                <Label text="Total" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label fx:id="lblTotal" text="R$ 0,00" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            </VBox>

            <!-- BOTÃO FINALIZAR -->
            <Button fx:id="btnConfirmarPedido"
                    text="Confirmar"
                    onMouseClicked="#ConfirmarPedido"
                    style="-fx-font-size: 16px; -fx-background-color: #008000; -fx-text-fill: white;" />
        </VBox>

    </children>

</VBox>
