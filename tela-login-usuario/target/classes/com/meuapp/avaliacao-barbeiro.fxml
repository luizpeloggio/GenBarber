<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Separator?>

<VBox alignment="TOP_CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meuapp.AvaliacaoBarbeiroController" style="-fx-padding: 20;">
    
    <!-- CABEÇALHO -->
    <VBox alignment="CENTER" spacing="10">
        <Label text="Minhas Avaliações" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Button text="Voltar" onAction="#voltarParaPerfil" style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-padding: 8 15;"/>
    </VBox>

    <!-- RESUMO DA AVALIAÇÃO -->
    <VBox style="-fx-background-color: #f8f9fa; -fx-padding: 20; -fx-background-radius: 10;" spacing="15" alignment="CENTER">
        <Label text="Avaliação Geral" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <HBox alignment="CENTER" spacing="20">
            <!-- NOTA MÉDIA -->
            <VBox alignment="CENTER" spacing="5">
                <Label fx:id="labelNotaMedia" text="0.0" style="-fx-font-size: 36px; -fx-font-weight: bold; -fx-text-fill: #f39c12;"/>
                <Label text="Nota Média" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>
            
            <!-- ESTRELAS -->
            <VBox alignment="CENTER" spacing="10">
                <HBox fx:id="containerEstrelasPrincipais" spacing="3" alignment="CENTER"/>
                <Label fx:id="labelTotalAvaliacoes" text="0 avaliações" style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
            </VBox>
        </HBox>
        
        <!-- DISTRIBUIÇÃO DAS NOTAS -->
        <VBox spacing="8" alignment="CENTER_LEFT" style="-fx-padding: 10;">
            <Label text="Distribuição das Notas:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <VBox fx:id="containerDistribuicao" spacing="5" alignment="CENTER_LEFT"/>
        </VBox>
    </VBox>

    <!-- LISTA DE COMENTÁRIOS -->
    <VBox spacing="15" style="-fx-padding: 10;" VBox.vgrow="ALWAYS">
        <Label text="Comentários dos Clientes" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent; -fx-border-color: transparent;">
            <VBox fx:id="containerComentarios" spacing="15" alignment="TOP_CENTER"/>
        </ScrollPane>
    </VBox>

    <!-- MENU INFERIOR -->
    <HBox spacing="60"
          alignment="CENTER"
          style="-fx-padding: 12 0 5 0;">

        <ImageView fx:id="casa1" fitHeight="28" fitWidth="28"
                   preserveRatio="true" onMouseClicked="#irTelaPrincipalBarbeiro">
            <image><Image url="@casa.png"/></image>
        </ImageView>

        <ImageView fx:id="perfil1" fitHeight="28" fitWidth="28"
                   preserveRatio="true" onMouseClicked="#irPerfilBarbeiro">
            <image><Image url="@perfil.png" /></image>
        </ImageView>

        <ImageView fx:id="avaliacao1" fitHeight="28" fitWidth="28"
                   preserveRatio="true" onMouseClicked="#abrirAvaliacoes">
            <image><Image url="@avaliacao.png" /></image>
        </ImageView>

        <ImageView fx:id="configuracao1" fitHeight="28" fitWidth="28"
                   preserveRatio="true" onMouseClicked="#irConfiguracaoBarbeiro">
            <image><Image url="@configuracao.png" /></image>
        </ImageView>

    </HBox>
</VBox>