<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ScrollPane?>

<VBox alignment="TOP_CENTER" spacing="10"
      xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.meuapp.masculino"
      style="-fx-background-color: #f7f7f7;"
      prefWidth="400">

    <children>

        <!-- TÍTULO -->
        <Label text="Barbearias que oferecem cortes masculino"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20 0 0 0;" />

        <!-- LISTA SCROLLÁVEL -->
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;"
                    prefHeight="500" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED">
            <content>
                <VBox fx:id="listaBarbearias" spacing="15" alignment="CENTER"
                      style="-fx-padding: 10 10 80 10;">
                </VBox>
            </content>
        </ScrollPane>

        <!-- MENU INFERIOR -->
        <VBox spacing="5" alignment="CENTER"
              style="-fx-background-color: #ffffff; -fx-padding: 10;"
              VBox.vgrow="NEVER">

            <children>
                <HBox alignment="CENTER" spacing="40">

                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#voltarPrincipalCliente">
                        <image><Image url="@casa.png"/></image>
                    </ImageView>

                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirMenuCliente">
                        <image><Image url="@menu.png"/></image>
                    </ImageView>

                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirComprasCliente">
                        <image><Image url="@carrinho-de-compras.png"/></image>
                    </ImageView>

                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirPerfilCliente">
                        <image><Image url="@perfil.png"/></image>
                    </ImageView>

                    <ImageView fitHeight="25" fitWidth="25" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirConfiguracaoCliente">
                        <image><Image url="@configuracao.png"/></image>
                    </ImageView>

                </HBox>
            </children>
        </VBox>

    </children>

</VBox>
