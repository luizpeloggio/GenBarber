<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meuapp.areaRendimentos">
    <children>
        <HBox alignment="CENTER" spacing="40">

            <!-- LOGO -->

            <VBox alignment="CENTER" spacing="15.0" style="-fx-padding: 5px 10px;">
                <StackPane styleClass="logo" alignment="CENTER">
                <ImageView fx:id="imageViewCliente"
                        fitHeight="160.0" fitWidth="160.0"
                        pickOnBounds="true" preserveRatio="true">
                    <Image url="@genBarber-Photoroom.png" />
                </ImageView>
            </StackPane>
            </VBox>

        </HBox>

        <!-- RENDIMENTOS -->
        <VBox styleClass="container" spacing="5.0" alignment="CENTER">
            <children>
                <VBox spacing="15" alignment="CENTER">

                    <Label text="Meus Rendimentos" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>

                    <HBox spacing="20" alignment="CENTER" styleClass="servicos">
                        
                        <Button text="DiÃ¡rios" styleClass="buttonContinue"/>
                        <Button text="Mensais" styleClass="buttonContinue"/>
                        <Button text="Anuais"  styleClass="buttonContinue"/>

                    </HBox>

                    <HBox spacing="20" alignment="CENTER" styleClass="servicos">
                        
                        <HBox spacing="20" alignment="CENTER" styleClass="servicos">

                        <!-- CARD: Total de Rendimentos -->
                        <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 12; -fx-background-radius: 12; -fx-border-color: #ccc;">
                            <Label text="Total de Rendimentos" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                            <Label fx:id="labelTotalRendimentos" text="R$ 0,00" style="-fx-font-size: 18px; -fx-text-fill: #2a7f2a;" />
                        </VBox>

                        <!-- CARD: Total de Atendimentos -->
                        <VBox alignment="CENTER" style="-fx-background-color: #ffffff; -fx-padding: 15; -fx-border-radius: 12; -fx-background-radius: 12; -fx-border-color: #ccc;">
                            <Label text="Total de Atendimentos" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                            <Label fx:id="labelTotalAtendimentos" text="0" style="-fx-font-size: 18px; -fx-text-fill: #1a4d9b;" />
                        </VBox>

                    </HBox>


                    </HBox>
                </VBox>
            </children>
        </VBox>

        
        <!-- MENU INFERIOR -->
        <VBox styleClass="container-footer" spacing="5.0" alignment="CENTER">
            <children>

                <HBox spacing="20" alignment="CENTER" styleClass="servicos">

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="casa1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#irTelaPrincipalBarbeiro">
                            <image><Image url="@casa.png"/></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="perfil1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#irPerfilBarbeiro">
                            <image><Image url="@perfil.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="configuracao1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#irConfiguracaoBarbeiro">
                            <image><Image url="@configuracao.png" /></image>
                        </ImageView>
                    </VBox>

                </HBox>

            </children>
        </VBox>
    </children>
</VBox>