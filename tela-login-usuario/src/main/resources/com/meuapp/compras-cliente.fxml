<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.meuapp.comprasCliente">

    <children>

        <!-- HEADER -->
        <VBox styleClass="container-header" alignment="CENTER">
            <children>
                <Label text="Suas Compras"
                       styleClass="label-header"
                       style="-fx-font-size: 26px; -fx-font-weight: bold;" />
            </children>
        </VBox>


        <!-- ÁREA DO CORPO -->
        <VBox styleClass="container-body" spacing="20" alignment="TOP_CENTER" maxWidth="340">
            <Button fx:id="btnFecharPedido" text="Fechar Pedido" onMouseClicked="#fecharPedido"
            style="-fx-font-size: 16px; -fx-background-color: #008000; -fx-text-fill: white;"
            visible="false"
            managed="false" />

            <!-- Mensagem quando o carrinho está vazio -->
            <VBox fx:id="msgVazioBox" alignment="CENTER" spacing="10">
                <children>
                    <Label text="Seu carrinho está vazio."
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                    <Label text="Adicione um serviço para continuar."
                           style="-fx-font-size: 14px;" />

                    <Button text="Ir para barbearias"
                            styleClass="button-primary"
                            onAction="#irMenuCliente"/>
                </children>
            </VBox>

            <!-- LISTA DINÂMICA DOS ITENS -->
            <VBox fx:id="listaCompras" spacing="15" alignment="TOP_CENTER" />

        </VBox>


        <!-- MENU INFERIOR -->
        <VBox styleClass="container-footer" spacing="5" alignment="CENTER">
            <children>

                <HBox spacing="20" alignment="CENTER" styleClass="servicos">

                    <VBox alignment="CENTER">
                        <ImageView fx:id="casa1" fitHeight="20" fitWidth="20" preserveRatio="true"
                                   pickOnBounds="true" onMouseClicked="#voltarPrincipalCliente">
                            <image><Image url="@casa.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox alignment="CENTER">
                        <ImageView fx:id="menu1" fitHeight="20" fitWidth="20" preserveRatio="true"
                                   pickOnBounds="true" onMouseClicked="#abrirMenuCliente">
                            <image><Image url="@menu.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox alignment="CENTER">
                        <ImageView fx:id="compras1" fitHeight="20" fitWidth="20" preserveRatio="true"
                                   pickOnBounds="true" onMouseClicked="#abrirComprasCliente">
                            <image><Image url="@carrinho-de-compras.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox alignment="CENTER">
                        <ImageView fx:id="perfil1" fitHeight="20" fitWidth="20" preserveRatio="true"
                                   pickOnBounds="true" onMouseClicked="#abrirPerfilCliente">
                            <image><Image url="@perfil.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox alignment="CENTER">
                        <ImageView fx:id="configuracao1" fitHeight="20" fitWidth="20" preserveRatio="true"
                                   pickOnBounds="true" onMouseClicked="#abrirConfiguracaoCliente">
                            <image><Image url="@configuracao.png" /></image>
                        </ImageView>
                    </VBox>

                </HBox>

            </children>
        </VBox>

    </children>

</VBox>
