<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>  
<?import javafx.scene.control.ToggleGroup?> 

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meuapp.historicoCliente">
    <children>

        <VBox styleClass="container-header" alignment="CENTER">
            <children>
                <Label text="Histórico" styleClass="label-header" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            </children>
        </VBox>

        <VBox fx:id="containerContent"
              styleClass="container-content"
              alignment="TOP_CENTER"
              spacing="15.0"
              >

            <children>

                <HBox spacing="10.0"
                      alignment="CENTER_LEFT"
                      styleClass="item-favorito"
                      style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10 10 10 10;">

                    <children>
                        <ImageView fx:id="fotoHistorico" fitHeight="120" fitWidth="120" preserveRatio="false">
                            <image>
                                <Image url="@soPontinhas.jpg"/>
                            </image>
                        </ImageView>

                        <Label text="Só as pontinhas"
                               style="-fx-font-size: 18px; -fx-font-weight:bold;"/>

                    </children>

                </HBox>

            </children>
        </VBox>


         <!-- MENU INFERIOR -->
        <VBox styleClass="container-footer" spacing="5.0" alignment="CENTER">
            <children>

                <HBox spacing="20" alignment="CENTER" styleClass="servicos">

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="casa1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#voltarPrincipalCliente">
                            <image><Image url="@casa.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="menu1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirMenuCliente">
                            <image><Image url="@menu.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="compras1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirComprasCliente">
                            <image><Image url="@carrinho-de-compras.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="perfil1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirPerfilCliente">
                            <image><Image url="@perfil.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="configuracao1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirConfiguracaoCliente">
                            <image><Image url="@configuracao.png" /></image>
                        </ImageView>
                    </VBox>

                </HBox>

            </children>
        </VBox>
    </children>
</VBox>