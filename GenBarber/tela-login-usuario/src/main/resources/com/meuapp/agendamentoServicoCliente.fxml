<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.meuapp.agendamentoServicoCliente">

    <children>

        <!-- LISTA DE ITENS -->
        <VBox fx:id="listaBarbearias" spacing="10" alignment="CENTER_LEFT">

            <!-- ITEM 1 -->
            <VBox spacing="2" alignment="CENTER_LEFT"
                  style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10;"
                  styleClass="item-favorito">

                <HBox spacing="10" alignment="CENTER_LEFT">

                    <ImageView fx:id="corteSocialImgView" fitWidth="100" fitHeight="100" preserveRatio="false">
                        <clip>
                            <Circle centerX="50" centerY="50" radius="50" />
                        </clip>
                        <image><Image url="@corteSocial.png"/></image>
                    </ImageView>

                    <VBox spacing="5">
                        <Label text="Corte de cabelo: Corte Social" style="-fx-font-size: 15px;" />
                        <Label text="Preço: 67,80 R$" style="-fx-font-size: 15px;" />
                    </VBox>

                    <Pane HBox.hgrow="ALWAYS"/>
                </HBox>

                <Button text="Adicionar" styleClass="buttonVisitar" onMouseClicked="#adicionarCorteSocial"/>
            </VBox>

            <!-- ITEM 2 -->
            <VBox spacing="2" alignment="CENTER_LEFT"
                  style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10;"
                  styleClass="item-favorito">

                <HBox spacing="10" alignment="CENTER_LEFT">

                    <ImageView fx:id="corteMilitarImgView" fitWidth="100" fitHeight="100" preserveRatio="false">
                        <clip>
                            <Circle centerX="50" centerY="50" radius="50" />
                        </clip>
                        <image><Image url="@corteMilitar.png"/></image>
                    </ImageView>

                    <VBox spacing="5">
                        <Label text="Corte de cabelo: Corte Militar" style="-fx-font-size: 15px;" />
                        <Label text="Preço: 97,80 R$" style="-fx-font-size: 15px;" />
                    </VBox>

                    <Pane HBox.hgrow="ALWAYS"/>
                </HBox>

                <Button text="Adicionar" styleClass="buttonVisitar" onMouseClicked="#adicionarCorteMilitar"/>
            </VBox>

            <!-- ITEM 3 -->
            <VBox spacing="2" alignment="CENTER_LEFT"
                  style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10;"
                  styleClass="item-favorito">

                <HBox spacing="10" alignment="CENTER_LEFT">

                    <ImageView fx:id="buzzCutImgView" fitWidth="100" fitHeight="100" preserveRatio="false">
                        <clip>
                            <Circle centerX="50" centerY="50" radius="50" />
                        </clip>
                        <image><Image url="@buzzCut.png"/></image>
                    </ImageView>

                    <VBox spacing="5">
                        <Label text="Corte de cabelo: Buzz Cut" style="-fx-font-size: 15px;" />
                        <Label text="Preço: 17,80 R$" style="-fx-font-size: 15px;" />
                    </VBox>

                    <Pane HBox.hgrow="ALWAYS"/>
                </HBox>

                <Button text="Adicionar" styleClass="buttonVisitar" onMouseClicked="#adicionarBuzzCut"/>
            </VBox>

            <!-- ITEM 4 -->
            <VBox spacing="2" alignment="CENTER_LEFT"
                  style="-fx-border-color: #ccc; -fx-border-width: 1px; -fx-padding: 10;"
                  styleClass="item-favorito">

                <HBox spacing="10" alignment="CENTER_LEFT">

                    <ImageView fx:id="fadeImgView" fitWidth="100" fitHeight="100" preserveRatio="false">
                        <clip>
                            <Circle centerX="50" centerY="50" radius="50" />
                        </clip>
                        <image><Image url="@fade.png"/></image>
                    </ImageView>

                    <VBox spacing="5">
                        <Label text="Corte de cabelo: Fade" style="-fx-font-size: 15px;" />
                        <Label text="Preço: 37,80 R$" style="-fx-font-size: 15px;" />
                    </VBox>

                    <Pane HBox.hgrow="ALWAYS"/>
                </HBox>

                <Button text="Adicionar" styleClass="buttonVisitar" onMouseClicked="#adicionarFade"/>
            </VBox>

        </VBox>

        <!-- MENU INFERIOR -->
        <VBox styleClass="container-footer" spacing="5" alignment="CENTER">
            <children>
                <HBox alignment="CENTER" styleClass="servicos">

                    <ImageView fx:id="casa1" fitHeight="20" fitWidth="20" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#voltarPrincipalCliente">
                        <image><Image url="@casa.png"/></image>
                    </ImageView>

                    <ImageView fx:id="menu1" fitHeight="20" fitWidth="20" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirMenuCliente">
                        <image><Image url="@menu.png"/></image>
                    </ImageView>

                    <ImageView fx:id="compras1" fitHeight="20" fitWidth="20" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirComprasCliente">
                        <image><Image url="@carrinho-de-compras.png"/></image>
                    </ImageView>

                    <ImageView fx:id="perfil1" fitHeight="20" fitWidth="20" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirPerfilCliente">
                        <image><Image url="@perfil.png"/></image>
                    </ImageView>

                    <ImageView fx:id="configuracao1" fitHeight="20" fitWidth="20" preserveRatio="true"
                               pickOnBounds="true" onMouseClicked="#abrirConfiguracaoCliente">
                        <image><Image url="@configuracao.png"/></image>
                    </ImageView>

                </HBox>
            </children>
        </VBox>

    </children>

</VBox>
