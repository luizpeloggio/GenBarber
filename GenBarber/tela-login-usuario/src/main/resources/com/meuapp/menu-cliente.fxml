<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meuapp.menuCliente">
    <children>

        <VBox styleClass="container-header" alignment="CENTER">
            <children>
                <Label text="Menu" styleClass="label-header" style="-fx-font-size: 26px; -fx-font-weight: bold;"/>
            </children>
        </VBox>


        <VBox styleClass="container-body" spacing="15.0" alignment="TOP_CENTER">
            <Label text="Escolha o tipo de conta"/>

            <HBox alignment="CENTER" spacing="50.0"> <VBox alignment="CENTER" spacing="10.0">
                    <StackPane styleClass="imagem">
                        <ImageView fx:id="imageViewHistoricoCliente" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirHistoricoCliente">
                            <image><Image url="@historico.jpg" /></image>
                        </ImageView>
                    </StackPane>
                    <Label text="Histórico"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10.0">
                    <StackPane styleClass="imagem">
                        <ImageView fx:id="imageViewFavoritosCliente" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirFavoritosCliente">
                            <image><Image url="@favoritos.jpg" /></image>
                        </ImageView>
                    </StackPane>
                    <Label text="Favoritos"/>
                </VBox>
                
            </HBox>

             <HBox alignment="CENTER" spacing="50.0"> <VBox alignment="CENTER" spacing="10.0">
                    <StackPane styleClass="imagem">
                        <ImageView fx:id="imageViewLocalizacaoCliente" fitHeight="80.0" fitWidth="80.0" pickOnBounds="true">
                            <image><Image url="@bussola.jpg" /></image>
                        </ImageView>
                    </StackPane>
                    <Label text="Localização"/>
                </VBox>

                <VBox alignment="CENTER" spacing="10.0">
                    <StackPane styleClass="imagem">
                        <ImageView fx:id="imageViewAgendamentoCliente" fitHeight="80.0" fitWidth="80.0" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirAgendamentoCliente">
                            <image><Image url="@agendament0.jpg" /></image>
                        </ImageView>
                    </StackPane>
                    <Label text="Agendamento"/>
                </VBox>
                
            </HBox>

        </VBox>


         <!-- MENU INFERIOR -->
        <VBox styleClass="container-footer" spacing="5.0" alignment="CENTER">
            <children>

                <HBox spacing="20" alignment="CENTER" styleClass="servicos">

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="casa1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#voltarPrincipalCliente">
                            <image><Image url="@casa.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="menu1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirMenuCliente">
                            <image><Image url="@menu.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="compras1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirComprasCliente">
                            <image><Image url="@carrinho-de-compras.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="perfil1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirPerfilCliente">
                            <image><Image url="@perfil.png" /></image>
                        </ImageView>
                    </VBox>

                    <VBox spacing="8" alignment="CENTER">
                        <ImageView fx:id="configuracao1" fitHeight="20" fitWidth="20" preserveRatio="true" pickOnBounds="true" onMouseClicked="#abrirConfiguracaoCliente">
                            <image><Image url="@configuracao.png" /></image>
                        </ImageView>
                    </VBox>

                </HBox>

            </children>
        </VBox>
    </children>
</VBox>