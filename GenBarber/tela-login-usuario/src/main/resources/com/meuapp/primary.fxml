<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.StackPane?>


<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.meuapp.PrimaryController">
   <children>

      <VBox alignment="CENTER" spacing="10.0">
                <StackPane styleClass="logo">
                    <ImageView fx:id="imageViewCliente" fitHeight="160.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
                        <image><Image url="@genBarber-Photoroom.png" /></image>
                    </ImageView>
                </StackPane>
      </VBox>

      <Label styleClass="text1" text="Criar uma conta"/>
      <Label text="Digite seu e-mail para se inscrever neste aplicativo."/>

      <TextField styleClass="inputTextFile" fx:id="emailField" promptText="email@domain.com" />

      <TextField styleClass="inputTextFile" fx:id="passwordField" promptText="Digite sua senha" />
      
      <Button styleClass="buttonContinue" fx:id="primaryButton" text="Continue" onAction="#login"/>

      <Label text="Já tem uma conta?"/>

      <Button fx:id="registerButton" text="Cadastre-se" onAction="#switchToSecondary"/>

      <Label text="© 2024 GenBarber. Todos os direitos reservados."/>

   </children>

 
   
</VBox>
